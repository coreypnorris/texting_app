<h1>New Message</h1>

<%= render("layouts/errors", :object => @message) %>

<%= form_for [current_user, @message ] do |f| %>
  <div class="form-group">
    <%= f.label :from %></br>
    <%= f.text_field :from %>
  </div>

  <div class="form-group" id="to-field">
    <%= f.label :to %></br>
    <%= f.text_field :to %>
  </div>

  <div class="form-group">
    <span id='contact-btn' class='btn btn-default'>Select from Contacts</span>
  </div>

  <div class="form-group" id="contacts-checkbox">
    <% current_user.contacts.each do |contact| %>
      <%= check_box_tag("#{contact.name}", contact.phone) %>
      <%= label_tag("#{contact.name}") %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Message" %></br>
    <%= f.text_area :body %>
  </div>


  <div class="form-group" id="save-check">
    <%= label_tag :save_contact %>
    <%= check_box_tag :save_contact %>
  </div>

  <div class="form-group" id="name_form">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>




  <%= f.submit(:class => "btn btn-default") %>
<% end %>
